---
export const prerender = true;

interface Props {
  post: string | undefined | null;
}

const { post } = Astro.props as Props;
---

<div
  class="blog mt-6 md:mt-16 lg:px-44 md:px-44 px-6 leading-7 font-normal text-base flex flex-col gap-4">
  <Fragment set:html={post} />
</div>

<style is:inline>
  /* .blog p {
  margin-bottom: 1.25rem;
  font-size: 1.125rem; 
  line-height: 1.75rem;
  color: #2c3544;
} */

  .blog h1,
  h2 {
    margin-top: 2rem;
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 800;
  }

  .blog a {
    color: #4338ca;
    text-decoration-line: underline;
    font-weight: 500;
  }

  .blog a:hover {
    color: #3730a3;
  }

  .blog h3,
  h4,
  h5 {
    font-size: 1.5rem; /* 24px */
    line-height: 2rem; /* 32px */
    font-weight: 700;
  }

  .blog ol {
    list-style-type: decimal;
    padding-left: 1.25rem; /* 20px */
    padding-right: 1.25rem; /* 20px */
    margin-bottom: 1rem; /* 16px */
    margin-left: 1rem;
    gap: 0.5rem; /* 8px */
    display: flex;
    flex-direction: column;
  }

  .blog ul {
    list-style-type: disc;
    padding-left: 1.25rem; /* 20px */
    padding-right: 1.25rem; /* 20px */
    margin-bottom: 1rem; /* 16px */
    margin-left: 1rem;
    gap: 0.5rem; /* 8px */
    display: flex;
    flex-direction: column;
  }

  .blog code {
    font-size: 0.875rem; /* 14px */
    line-height: 1.25rem; /* 20px */
    border-radius: 0.375rem; /* 6px */
    background-color: rgb(249 250 251);
    padding: 0.75rem; /* 12px */
  }

  .blog figure {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
    justify-items: center;
    max-width: max-content;
    overflow: hidden;
  }

  .blog figcaption {
    text-align: center;
    font-size: 0.75rem;
    line-height: 1rem;
    font-weight: 300;
  }

  /* .blog img {
  margin-bottom: 0.75rem; 
  border-radius: 0.375rem;
} */

  .blog .notion-callout {
    margin-bottom: 2rem;
    margin-top: 1.5rem;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    padding: 1rem 0.75rem;
    border-radius: 0.375rem; /* 6px */
    color: #333f51;
    background-color: rgb(243 232 255);
    border-width: 2px;
    border-color: rgb(79 70 229);
  }

  .blog blockquote {
    margin-bottom: 1.5rem;      /* mb-6 */
    padding-left: 1.5rem;       /* px-6 */
    padding-right: 1.5rem;      /* px-6 */
    padding-top: 1rem;          /* py-4 */
    padding-bottom: 1rem;       /* py-4 */
    border-left-width: 2px;     /* border-l-2 */
    border-left-color: #6366f1; /* border-indigo-500 */
  }

  .blog blockquote p {
    margin-bottom: 1rem;        /* mb-4 */
    font-size: 1rem;           /* text-md */
    line-height: 1.25;         /* leading-tight */
    font-weight: 500;          /* font-medium */
    color: #1f2937;           /* text-coolGray-800 */
  }

  @media (min-width: 768px) {
    .blog blockquote p {
      font-size: 1.125rem;     /* md:text-lg */
    }
  }

  /* const blockquoteClasses = [
      "mb-6",
      "px-6",
      "py-4",
      "border-l-2",
      "border-indigo-500",
    ];
    const blockquoteText = [
      "mb-4",
      "text-md",
      "md:text-lg",
      "leading-tight",
      "font-medium",
      "text-coolGray-800",
    ]; */

  .blog table {
    width: 100%;
    margin-bottom: 1.5rem;
    border-collapse: collapse;
  }

  .blog th,
  .blog td {
    padding: 0.75rem;
    border: 1px solid #e5e7eb;  /* Similar to Tailwind's gray-200 */
    text-align: left;
  }

  .blog th {
    background-color: #f3f4f6;  /* Changed to gray-100 for more contrast */
    font-weight: 600;
  }
</style>
