---
import { Image } from "astro:assets";
interface Props {
  link: string;
  cardImage: string;
  title: string;
  description: string;
}

const { link, cardImage, title, description } = Astro.props as Props;
---

<a
  href={link}
  class="project flex flex-col items-center justify-center text-center">
  <Image
    width={2000}
    height={2000}
    quality="high"
    src={cardImage}
    class="rounded-xl card shadow-card hover:drop-shadow-lg"
    alt={description}
  />
  <h2 class="pt-8 text-lg font-bold">{title}</h2>
  <p class="font-light pt-2 text-sm">{description}</p>
</a>
