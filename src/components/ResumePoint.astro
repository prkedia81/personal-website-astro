---
interface Props {
  title: string;
  time: string;
  description: string;
}

const { title, time, description } = Astro.props as Props;
---

<div
  class="flex flex-col sm:relative sm:before:absolute sm:before:top-2 sm:before:w-4 sm:before:h-4 sm:before:rounded-full sm:before:left-[-35px] sm:before:z-[1] before:bg-indigo-400">
  <h3 class="text-xl font-semibold tracking-wide">{title}</h3>
  <time class="text-xs tracking-wide uppercase">{time}</time>
  <p class="mt-3">{description}</p>
</div>
