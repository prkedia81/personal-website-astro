---
interface Props {
  youtubeLink: string;
  title: string;
  about: string;
}

const { youtubeLink, title, about } = Astro.props as Props;
---

<div class="flex flex-col md:flex-row items-center gap-12">
  <div class="w-fit">
    <iframe
      src={youtubeLink}
      title="YouTube video player"
      width="560"
      height="315"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe>
  </div>
  <div class="text text-center px-3 md:px-0 md:text-start">
    <h2 class="title text-xl font-bold">{title}</h2>
    <p class="body pt-6">{about}</p>
  </div>
</div>
